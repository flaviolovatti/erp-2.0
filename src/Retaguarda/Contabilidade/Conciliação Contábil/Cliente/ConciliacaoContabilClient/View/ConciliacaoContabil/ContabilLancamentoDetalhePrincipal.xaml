<UserControl x:Class="ConciliacaoContabilClient.View.ConciliacaoContabil.ContabilLancamentoDetalhePrincipal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:ConciliacaoContabilClient.View.ConciliacaoContabil"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="700">
    <TabControl>
        <TabItem Name="tabDetalheLista" Visibility="Collapsed" IsSelected="True">
            <TabItem.Content>
                <DockPanel LastChildFill="True">
                    <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Stretch" Orientation="Horizontal" VerticalAlignment="Stretch" Margin="0" Background="#FFEBEBEB" Height="25" OpacityMask="#FF5B4545">
                        <Label Content="Lancamentos Contabeis:" Margin="10,5,0,0" FontSize="12" FontWeight="Bold" />
                    </StackPanel>

                    <view:ContabilLancamentoDetalheLista x:Name="viewLista"></view:ContabilLancamentoDetalheLista>
                    
                </DockPanel>
            </TabItem.Content>
        </TabItem>
        <TabItem Name="tabDetalhe" Visibility="Collapsed">
        </TabItem>
    </TabControl>
</UserControl>
