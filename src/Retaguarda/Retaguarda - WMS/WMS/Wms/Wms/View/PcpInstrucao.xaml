<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Cadastros.View.PcpInstrucao" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:viewBotoes="clr-namespace:Cadastros.View.Botoes" mc:Ignorable="d" d:DesignHeight="500" d:DesignWidth="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Top" Grid.Column="0">
                <viewBotoes:BarraInterna></viewBotoes:BarraInterna>
            </StackPanel>
            <Grid>
                <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Text="{Binding PcpInstrucaoSelected.Codigo}" Height="23" Width="100" Margin="10,32,0,0"  />
                <Label Content="Codigo" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,6,0,0"  />
                <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Text="{Binding PcpInstrucaoSelected.Descricao}" Height="23" Width="571" Margin="119,32,0,0"  />
                <Label Content="Descricao" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="119,6,0,0"  />
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>