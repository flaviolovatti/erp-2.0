<UserControl x:Class="OrdemServico.View.OsStatusPrincipal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:OrdemServico.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="700">
    <TabControl>
        <TabItem Name="tabOsStatusLista" Visibility="Collapsed" IsSelected="{Binding IsListar}">
            <TabItem.Content>
                <DockPanel LastChildFill="True">
                    <view:OsStatusLista></view:OsStatusLista>
                </DockPanel>
            </TabItem.Content>
        </TabItem>
        <TabItem Name="tabOsStatus" Visibility="Collapsed" IsSelected="{Binding IsEditar}">
            <view:OsStatus></view:OsStatus>
        </TabItem>
    </TabControl>
</UserControl>
